---
const subscribeHeader = {
    title: "Subscribe to Premium",
    description: "Subscribe to unlock new features and if eligible, receive a share of revenue.",
    button: "Subscribe"
}

---

<aside class="w-[500px] flex flex-col gap-6 pl-5 pr-24 pt-4">
    <div class="flex items-center gap-3 bg-gray-800 px-5 py-3 text-gray-400 rounded-full">
        <i class="fa-solid fa-magnifying-glass"></i>
        <input type="text" placeholder="Buscar..." class="outline-none bg-transparent">
    </div>
    <div class="flex gap-2 flex-col text-white rounded-3xl border-gray-500 border-[1px] p-4">
        <h3 class="text-2xl font-bold">{subscribeHeader.title}</h3>
        <p class="">{subscribeHeader.description}</p>
        <a href="" class="px-4 py-2 w-fit bg-blue-500 rounded-full hover:scale-105 active:scale-100 font-semibold hover:contrast-150 transition">{subscribeHeader.button}</a>
    </div>
</aside>
